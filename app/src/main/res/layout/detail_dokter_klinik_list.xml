<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/spesialis_dokter_list"
        android:layout_marginLeft="5dp"
        android:textColor="#666"
        android:layout_below="@+id/nama_dokter_list"
        android:layout_toEndOf="@+id/is_buka_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="fish name"
        android:id="@+id/nama_dokter_list"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/is_buka_image" />

    <ImageButton
        android:id="@+id/goto_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/places_ic_search" />

    <TextView
        android:id="@+id/jarak_dokter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spesialis_dokter_list"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/goto_map"
        android:gravity="center_vertical|right"
        android:text="N/A km"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/is_buka_image"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nama_dokter_list"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        app:srcCompat="@android:drawable/presence_online" />

</RelativeLayout>